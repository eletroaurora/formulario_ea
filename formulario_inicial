<script>
  $('#observacao').hide();
  $('#outros_pag').hide();
  $('#outros_inv').hide();
  $('#otimizador').hide();
  $('#div_qtd_otm').hide();

  // função para verificar todas as vlaidaçoes para a próxima página

  function verifica() {

    //cliente
    if (document.getElementById("cliente").value.length < 1) {
      alert('Por favor, preencha o campo cliente');
      document.getElementById("cliente").focus();
      return false
    }

    //consultor
    if (document.getElementById("consultor").value.length < 1) {
      alert('Por favor, preencha o campo consultor');
      document.getElementById("consultor").focus();
      return false
    }

    //cpf/cnpj
    if (document.getElementById("cpf").value.length < 11) {
      alert('Por favor, preencha o campo CPF/CNPJ');
      document.getElementById("cpf").focus();
      return false
    }

    //email
    if (document.getElementById("email").value.length < 11) {
      alert('Por favor, preencha o campo E-mail');
      document.getElementById("email").focus();
      return false
    }
    //contato
    if (document.getElementById("telefone").value.length < 11) {
      alert('Por favor, preencha o campo Contato');
      document.getElementById("telefone").focus();
      return false
    }

    //rua
    if (document.getElementById("rua").value.length < 1) {
      alert('Por favor, preencha o campo Rua');
      document.getElementById("rua").focus();
      return false
    }

    //numero
    if (document.getElementById("numero").value.length < 1) {
      alert('Por favor, preencha o campo Número');
      document.getElementById("numero").focus();
      return false
    }

    //bairro
    if (document.getElementById("bairro").value.length < 1) {
      alert('Por favor, preencha o campo Bairro');
      document.getElementById("bairro").focus();
      return false
    }

    //cep
    if (document.getElementById("cep").value.length < 8) {
      alert('Por favor, preencha o campo CEP');
      document.getElementById("cep").focus();
      return false
    }

    //cep
    if (document.getElementById("cidade").value.length < 5) {
      alert('Por favor, preencha o campo Cidade');
      document.getElementById("cidade").focus();
      return false
    }



    //potencia do sistema
    if (document.getElementById("potencia").value.length < 1) {
      alert('Por favor, preencha o campo Potência (kWp)');
      document.getElementById("potencia").focus();
      return false
    }

    //quantidade de módulos
    if (document.getElementById("qtd_modulos").value.length < 1) {
      alert('Por favor, preencha o campo Quantidade de módulos');
      document.getElementById("qtd_modulos").focus();
      return false
    }

    //modelo do modulo
    if (document.getElementById("modelo_md").value.length < 1) {
      alert('Por favor, preencha o campo Modelo do módulo');
      document.getElementById("modelo_md").focus();
      return false
    }

    //quantidade de inversores
    if (document.getElementById("qtd_inversor").value.length < 1) {
      alert('Por favor, preencha o campo Quantidade de inversores');
      document.getElementById("qtd_inversor").focus();
      return false
    }

    // marca do inversor
    if (document.getElementById("marca_inv").value == "OUTROS" && document.getElementById("inversor_manual").value.length < 1) {
      alert('Por favor, preencha o campo Modelo do inversor');
      document.getElementById("inversor_manual").focus();
      return false
    }

    if (document.getElementById("marca_inv").value != "OUTROS" && document.getElementById("modelo_in").value.length < 1) {
      alert('Por favor, preencha o campo Modelo do inversor');
      document.getElementById("modelo_in").focus();
      return false
    }

    //verificador solaredge

    if (document.getElementById("marca_inv").value == "opcao3") {
      if (document.getElementById("qtd_otimizador").value.length < 1 || document.getElementById("otimiza").value.length < 1) {
        alert('Por favor, preencha todos os campos para inversores Solar Edge');
        document.getElementById("modelo_in").focus();
        return false
      }
    }

    //tipo de telhado
    if (document.getElementById("telhado").value.length < 1) {
      alert('Por favor, preencha o campo Tipo de telhado');
      document.getElementById("telhado").focus();
      return false
    }

    //acesso ao telhado
    if (document.getElementById("acesso_telhado").value.length < 1) {
      alert('Por favor, preencha o campo Altura para acesso ao telhado');
      document.getElementById("acesso_telhado").focus();
      return false
    }

    //Modalidade
    if (document.getElementById("modalidade").value.length < 1) {
      alert('Por favor, preencha o campo Modalidade');
      document.getElementById("modalidade").focus();
      return false
    }

    //Custo
    if (document.getElementById("custo").value.length < 1) {
      alert('Por favor, preencha o campo Custo');
      document.getElementById("custo").focus();
      return false
    }

    //Valor do contrato
    if (document.getElementById("teste_02").value.length < 1) {
      alert('Por favor, preencha o campo Valor do contrato');
      document.getElementById("teste_02").focus();
      return false
    }

    //Forma de pagamento
    if (document.getElementById("forma").value == "Outros") {
      if (document.getElementById("pag_desc").value.length < 1) {
        alert('Por favor, preencha a descrição com a nova forma de pagamento.');
        document.getElementById("pag_desc").focus();
        return false
      }

    }

    //FORMA DE PAGAMENTO
    if (document.getElementById("forma").value != "Outros") {

      if (document.getElementById("forma").value.length < 1) {
        alert('Por favor, preencha o campo Forma de pagamento.');
        document.getElementById("forma").focus();
        return false
      }
    }
    //RECEBIMENTO
    if (document.getElementById("recebimento").value.length < 1) {
      alert('Por favor, preencha o campo Recebimento');
      document.getElementById("recebimento").focus();
      return false
    }

    //setar os valores da forma;
    if (document.getElementById("forma").value == "Outros") {
      localStorage.setItem('forma_resp', document.querySelector("#pag_desc").value);
    }else{
      localStorage.setItem('forma_resp', document.querySelector("#forma").value);
    }

    //setar os valores do modelo de inversor;
    if (document.getElementById("marca_inv").value == "OUTROS") {
      localStorage.setItem('mod_i_resp', document.querySelector("#inversor_manual").value);
    }else{
      localStorage.setItem('mod_i_resp', document.querySelector("#modelo_in").value);
    }

    if (document.querySelector("#marca_inv").value != "opcao3") {
    
              document.querySelector("#otimiza").value = ""
              document.querySelector("#div_qtd_otm").value = ""
            }

    
            if (window.confirm("Você está certo de que todas as informações estão corretas?")) {
  window.open("template_pdf.html", "Obrigado por acessar o formulário!");
}
          
  localStorage.setItem('cliente_resp', document.querySelector("#cliente").value);
  localStorage.setItem('consultor_resp', document.querySelector("#consultor").value);
  localStorage.setItem('cpf_resp', document.querySelector("#cpf").value);
  localStorage.setItem('email_resp', document.querySelector("#email").value);
  localStorage.setItem('telefone_resp', document.querySelector("#telefone").value);
  localStorage.setItem('rua_resp', document.querySelector("#rua").value);
  localStorage.setItem('numero_resp', document.querySelector("#numero").value);
  localStorage.setItem('bairro_resp', document.querySelector("#bairro").value);
  localStorage.setItem('cep_resp', document.querySelector("#cep").value);
  localStorage.setItem('cidade_resp', document.querySelector("#cidade").value);
  localStorage.setItem('responsavel_resp', document.querySelector("#resp").value);
  localStorage.setItem('potencia_resp', document.querySelector("#potencia").value);
  localStorage.setItem('qtd_m_resp', document.querySelector("#qtd_modulos").value);
  localStorage.setItem('mod_m_resp', document.querySelector("#modelo_md").value);
  localStorage.setItem('qtd_i_resp', document.querySelector("#qtd_inversor").value);
  localStorage.setItem('telhado_resp', document.querySelector("#telhado").value);
  localStorage.setItem('arma_resp', document.querySelector("#recebimento").value);
  localStorage.setItem('modalidade_resp', document.querySelector("#modalidade").value);
  localStorage.setItem('custo_resp', document.querySelector("#custo").value);
  localStorage.setItem('contrato_resp', document.querySelector("#contrato").value);
  localStorage.setItem('obs_resp', document.querySelector("#descricao").value);
  localStorage.setItem('teste_02_resp', document.querySelector("#teste_02").value);
  localStorage.setItem('maps_resp', document.querySelector("#g_maps").value);
  localStorage.setItem('otm_resp', document.querySelector("#otimiza").value);
  localStorage.setItem('altura_resp', document.querySelector("#acesso_telhado").value);
  localStorage.setItem('qtd_otm_resp', document.querySelector("#qtd_otimizador").value);


  }




</script>
