        <script>
          function outros_inversor() {
            if (document.querySelector("#marca_inv").value == "OUTROS") {
              $('#outros_inv').show();
              $('#inv_mod').hide();
            } else {
              $('#outros_inv').hide();
              $('#inv_mod').show();
            }

            if (document.querySelector("#marca_inv").value == "opcao3") {
              $('#otimizador').show();
              $('#verifica').show();
              $('#div_qtd_otm').show();
            } else {
              $('#otimizador').hide();
              $('#verifica').hide();
              $('#div_qtd_otm').hide();
              document.querySelector("#otimiza").value = ""
              document.querySelector("#qtd_otimizador").value = ""
            }

          }

          function modelo_inv(){
            if (document.querySelector("#verificador_02").value == "SIM") {
              $('#outros_inv').show();
              $('#inv_mod').hide();
              $('#inv_qtd').hide();
            } else {
              $('#outros_inv').hide();
              $('#inv_mod').show();
              $('#inv_qtd').show();
            }

          }
        </script>

        <script>
            $('#verifica').hide();
          const select3 = document.getElementById("marca_inv");
          const select4 = document.getElementById("modelo_in");

          const options_2 = {
            opcao1: ["","DS3D-220", "QT2D-380"],
            opcao2: ["","ENPHASE IQ7AM-72-2-US - 335W - 220V"],
            opcao3: ["","SE 3.68K - SE3680H", "SE 3.68K + EV - SE3680H", "SE 5K - SE5000H", "SE 6K - SE6000H", "SE 8.25K - SE8250H", "SE 9.2K - SE9200H", "SE 9.2K + EV - SE9200H", "SE 20.1K", "SE 27.6K", "SE 33.3K", "SE 75K", "SE 100K"],

          };

          select3.addEventListener("change", function () {
            const selectedValue_2 = select3.value;
            const selectedOptions_2 = options_2[selectedValue_2];

            // limpar opções atuais
            select4.innerHTML = "";

            // adicionar as novas opções
            selectedOptions_2.forEach(function (option) {
              const optionElement_2 = document.createElement("option");
              optionElement_2.value = option;
              optionElement_2.text = option;
              select4.appendChild(optionElement_2);
            });
          });


        </script>





