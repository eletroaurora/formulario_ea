        <script>
          const select1 = document.getElementById("marca_md");
          const select2 = document.getElementById("modelo_md");

          const options = {
            opcao1: ["","Astronergy Chint 410 W - CHSM72M-HC "],
            opcao2: ["","BYD 335 W - P6C-36-SÉRIE-5BB-335W ", "BYD 445 W - BYD455MGK36 ", "BYD 540 W - BYD540MLK-36"],
            opcao3: ["","CND 415 W - HIKU CS3W-415P ", "CND 420 W - HIKU CS3W-420P", "CND 450 W - CS3W450MS", "CND 455 W - CS3W455MS", "CND 550 W - CS6W550MS"],
            opcao4: ["","DAH 450 W - DHM72L9/BF-450W "],
            opcao5: ["","JA 540 W - JAM72D30-540/MB ", " JA 545 W - JAM72D30-545/MB", "JA 550 W - JAM72S30-550/MR", "JA 580 W - JAM72D30-580/MB ", "JA 585 W - JAM72D30-585/MB"],
            opcao6: ["","JINKO 540 W - JKM540M-72HL4-BDVP", "JINKO 565 W - JKM565N-72HL4-V"],
            opcao7: ["","LONGI 500 W - LR5-66HPH-500M", "LONGI 540 W - LR5-72HBD", "LONGI 545 W - LR5-72HPH-545", "LONGI 550 W - LR5-72HPH-550 "],
            opcao8: ["","QCELLS 425 W - Q-PEAKDUOL-G6.3"],
          };

          select1.addEventListener("change", function () {
            const selectedValue = select1.value;
            const selectedOptions = options[selectedValue];

            // limpar opções atuais
            select2.innerHTML = "";

            // adicionar as novas opções
            selectedOptions.forEach(function (option) {
              const optionElement = document.createElement("option");
              optionElement.value = option;
              optionElement.text = option;
              select2.appendChild(optionElement);
            });
          });

        </script>


